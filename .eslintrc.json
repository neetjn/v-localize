{
  "root": true,
  "plugins": ["flowtype"],
  "extends": [
    "plugin:vue-libs/recommended",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxBOF": 1 }],
    "semi": ["error", "never"],
    "no-unused-vars": ["error"],
    "space-before-blocks": ["error", "always"],
    "quotes": ["error", "single"]
  },
  "globals": {
    "$": true,
    "Vue": true,
    "window": true
  }
}
